<section class="text-gray-400 bg-gray-900 body-font">
    <% if(messages.success) { %>
        <div class="flex justify-center" id="message">
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative w-3/4 "
                role="alert">
                <strong class="font-bold">Yay!</strong>
                <span class="block sm:inline">
                    <%= messages.success %>
                </span>
                <button class="absolute top-0 bottom-0 right-0 px-4 py-3" id="button">
                    <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20">
                        <title>Close</title>
                        <path
                            d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
                    </svg>
                </button>
            </div>
        </div>
        <% } %>
            <style>
                .heroText {
                    position: absolute;
                    transform: translate(-5%, -140%);
                }

                .heroTextTop {
                    font-size: 1.7rem;
                    font-weight: 700;
                    color: white;
                    margin: 0;
                    padding: 0;
                }

                .heroTextLogo {
                    font-size: 4rem;
                    font-weight: 900;
                    color: white;
                    margin: 0;
                    padding: 0;
                }
            </style>
            <div class="container mx-auto flex px-5 py-7 items-center justify-center flex-col">
                <img class="lg:w-5/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded heroImg" alt="hero"
                    src="/static/hero.jpg">
                <div class="heroText">
                    <h2 class="heroTextTop">Welcome to
                    </h2>
                    <h1 class="heroTextLogo">Programming Corner</h1>
                </div>
            </div>
</section>
<script>
    const message = document.getElementById('message');
    const button = document.getElementById('button');
    button.onclick = () => {
        message.classList.add('hidden');
    }
</script>