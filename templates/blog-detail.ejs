<section class="text-gray-400 bg-gray-900 body-font">
    <div class="container px-5 py-24 mx-auto">
        <div class="mb-20">
            <h1 class="sm:text-3xl text-2xl font-medium text-center title-font text-gray-200 mb-4">
                <%= blog.title %>
            </h1>
            <p class="text-center content">
                <%= blog.content %>
            </p>
            <p class="text-gray-400 inline-flex items-center md:mb-2 lg:mb-0 text-xl my-6">
                Post by:
                <a href="" class="text-blue-400 cursor-pointer mx-2">
                    <%= blog.user.name %>
                </a>
            </p>
        </div>
    </div>
</section>